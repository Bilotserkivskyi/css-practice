<header class="header">
    {{#with header}}
        <div class="header_top">   
            <div class="logo">
                <span class="logo_badge">{{brandName}}</span>
            </div>

            <nav class="header_nav">
                <div class="header_nav_right">
                    <div class="nav {{#if isVertical}}nav_vertical{{else}}nav_inline{{/if}}">
                        {{#each links}}  
                            <a href="{{url}}" class="nav_link">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            </nav>
        </div>

        <div class="header_bottom">
            <div class="header_bottom_ad">
                <span class="header_bottom_ad_badge">Ad</span>
                {{#with ad}}
                    <a href="{{url}}" class="header_bottom_ad_text">{{text}}</a>
                {{/with}}
            </div>
            <div class="header_bottom_users">
                Users online: {{userOnline}}
            </div>
        </div>
    {{/with}}                     
</header>