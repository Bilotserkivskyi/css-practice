<header class="header">            
    <div>
        {{>logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>                      
</header>

{{#with main}}
    <div class="main">
        <img src="{{image}}" alt="Main image" class="main_image">
        <div class="main_content">
            <h1 class="main_heading">{{heading}}</h1>
            <p class="main_description">{{descriotion}}</p> 
            <button class="button main_button" href="{{href}}">{{button}}</button>               
        </div>     
    </div>
{{/with}}


<main class="featured">
    {{#each featured}}
        {{> cardFeatured data=this}}
    {{/each}}
</main>

<div class="form">
    {{#each actions}}
        <div class="form_content">
            <h3 class="form_heading">{{heading}}</h3>
            <div>
                <a class="button form_button" href="{{url}}">{{text}}</a>
            </div>
        </div>
    {{/each}}
 </div>

<footer>
    <div class="footer">
        <div>
            {{>logo}}
            <span class="footer_copyright ">Â© 2023</span>
        </div>

        {{#each footer}}
            <div class="col-3"> 
                    <span class="footer_title">{{title}}</span>
                    {{>nav list=links isVertical=true}}
            </div>
        {{/each}}
    </div>
</footer> 

    
 
  
  