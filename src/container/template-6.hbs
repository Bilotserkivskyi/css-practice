<header class="header">            
    <div>
        {{>logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>                      
</header>

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_description">{{description}}</p>
        </div>
    {{/with}}

    {{#with form}}
        <form class="form">
            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input"
                    name="{{name}}" id="form-input-{{id}}" /> 
                {{/each}}
            </div>

            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>

            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
        <div>
            <h2 class="updates_title">{{title}}</h2>
        </div>

        <div>
            {{#each list}}
                <div class="update_list">
                    <span class="update_img">32x32</span>
                    <div class="update_content">
                        <strong class="update_nickname">@{{nickname}}</strong>
                        <p class="update_description">{{description}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
        {{#with show_all}}
            <span>
                <a href="{{url}}" class="updates_link">{{text}}</a>
            </span>
        {{/with}}
    {{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
        <div>
            <div class="expirience_title">
                <h3 class="expirience_h">{{title}}</h3>
                <div class="expirience_badge">{{badge}}</div>
            </div>            
        </div>
        <div class="expirience_list">
            {{#each list}}
                <div class="expirience_item">
                    <strong class="expirience_name">{{name}}</strong>
                    <p class="expirience_details">{{details}}</p>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>


<footer>
    <div class="footer">
        <div>
            {{>logo}}
            <span class="footer_copyright">Â© 2023</span>
        </div>

        {{#each footer}}
            <div class="col-3"> 
                <span class="footer_title">{{title}}</span>
                {{>nav list=links isVertical=true}}
            </div>
        {{/each}}
    </div>
</footer> 

     
 
  
  